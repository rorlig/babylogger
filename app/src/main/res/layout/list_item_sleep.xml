<?xml version="1.0" encoding="utf-8"?>

<com.rorlig.babylog.ui.widget.SleepView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/left_panel">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_sleep_selected"
            android:id="@+id/diaperImage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/diaperImage"
            android:layout_centerHorizontal="true"
            android:id="@+id/sleep_time"
            android:text="hello"
            android:textSize="10sp"
            android:textColor="@color/gray_cloud"
            android:textStyle="italic"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/left_panel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/row_sleep_start_time"
            android:layout_marginTop="10dp"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sleep_start_time"
                android:layout_marginRight="10dp"
                android:textColor="@color/primary_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/primary_gray"
                android:id="@+id/sleep_start_time"
                android:text="@string/incident_none"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:id="@+id/row_sleep_duration"
            android:layout_below="@id/row_sleep_start_time">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sleep_duration"
                android:layout_marginRight="10dp"
                android:textColor="@color/primary_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sleep_duration"
                android:layout_marginRight="10dp"
                android:textColor="@color/primary_gray"
                />

        </LinearLayout>

    </RelativeLayout>

</com.rorlig.babylog.ui.widget.SleepView>