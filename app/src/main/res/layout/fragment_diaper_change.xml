    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/accidentLayoutWrapper"
        android:layout_below="@+id/accidentHeader">
        <RadioGroup
            style="@style/RadioGroup"
            android:id="@+id/diaper_incident_type"
            android:layout_below="@+id/typeHeader">

            <RadioButton
                android:id="@+id/checkNoIncident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diaper_indicident_none"
                android:textColor="@color/text_color_main"
                style="@style/CheckBoxDefaultItem"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"

                android:layout_weight="1"/>

            <!--30 mall street. - 480 ; 465 ; &#45;&#45; -->


            <RadioButton
            android:id="@+id/checkNoDiaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diaper_indicident_no_diaper"
            android:textColor="@color/text_color_main"
            style="@style/CheckBoxDefaultItem"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/checkDiaperLeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diaper_incident_leak"
            android:textSize="10sp"

            android:textColor="@color/text_color_main"
            android:layout_gravity="center"
            style="@style/CheckBoxDefaultItem"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="10dp"
            android:layout_weight="1"/>
        </RadioGroup>

    </LinearLayout>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/notesHeader"
        style="@style/ListItemHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOTES"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:layout_below="@+id/accidentLayoutWrapper"
        android:textColor="@color/actionbar_background" />

    <EditText xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notes"
        android:textSize="14sp"
        android:layout_below="@+id/notesHeader"
        android:layout_margin="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background="#1E88E5"
        android:layout_alignParentBottom="true"
        />



  </RelativeLayout>
