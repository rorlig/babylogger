    <!--- list item styles -->
    <style name="ListItemContainerBase">
        <item name="android:background">?activatableItemBackground</item>
        <item name="android:minHeight">?android:listPreferredItemHeight</item>
    </style>
    <style name="SimpleListItem" parent="@style/ListItemContainerBase">
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingTop">8.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:paddingBottom">8.0dip</item>
    </style>


    <style name="SimpleListItem.Inset" parent="@style/ListItemContainerBase">
        <item name="android:paddingLeft">16.0dip</item>
        <item name="android:paddingTop">8.0dip</item>
        <item name="android:paddingRight">16.0dip</item>
        <item name="android:paddingBottom">8.0dip</item>
    </style>
    <style name="SimpleListItem.Inset.Small"
        parent="@style/SimpleListItem.Inset">
        <item name="android:minHeight">?android:listPreferredItemHeightSmall</item>
    </style>
    <style name="SimpleListItem.Small" parent="@style/SimpleListItem">
        <item name="android:minHeight">?android:listPreferredItemHeightSmall</item>
    </style>


    <style name="ListItemHeader" parent="@style/SimpleListItem.Inset.Small">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_color_header</item>
        <item name="android:gravity">left</item>
        <item name="android:background">@color/white</item>
        <item name="android:clickable">false</item>
        <item name="android:minHeight">0.0px</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="ListItemHeader.Purple" parent="ListItemHeader">
        <item name="android:textColor">@color/primary_purple</item>
    </style>

    <style name="ListItemHeader.Blue" parent="ListItemHeader">
        <item name="android:textColor">@color/primary_blue</item>
    </style>

    <style name="ListItemHeader.Green" parent="ListItemHeader">
        <item name="android:textColor">@color/primary_green</item>
    </style>



