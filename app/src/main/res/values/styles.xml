        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>

    </style>

    <style name="ListItemDividerShort.Purple" parent="ListItemDividerShort">
        <item name="android:background">@color/primary_purple</item>
    </style>


    <style name="ListItemDividerShort.Blue" parent="ListItemDividerShort">
        <item name="android:background">@color/primary_blue</item>
    </style>


    <style name="ListItemDividerShort.Orange" parent="ListItemDividerShort">
        <item name="android:background">@color/primary_orange</item>
    </style>

    <style name="ListItemDividerShort.Gray" parent="ListItemDividerShort">
        <item name="android:background">@color/primary_gray</item>
    </style>
    <style name="ListItemHorizontalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
