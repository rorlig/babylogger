        <item name="android:padding">2dp</item>
    </style>

    <style name="ListItemSwipe.Image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ListItemSwipe.Text" parent="ListItemSwipe.Image">
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>



    <style name="ButtonDefault" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/baby_btn_default_holo_light</item>
    </style>

    <style name="ImageButtonDefault" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/baby_btn_default_holo_light</item>
    </style>

    <style name="CheckBoxDefaultItem" parent="android:Theme.Holo.Light">

        <item name="android:listChoiceIndicatorMultiple">@drawable/baby_btn_check_holo_light</item>

    </style>

    <style name="Spinnerbaby" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/baby_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/baby_list_selector_holo_light</item>
    </style>

    <style name="ButtonBaby" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/baby_btn_default_focused_holo_light</item>
    </style>


    <style name="PagerTabStripText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_main</item>
        <item name="android:textAllCaps">true</item>
    </style>



    <style name="ActionBarTabStyle.Babyapp" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_babyapp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HeaderLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>




        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

